{
    "root": true,
    "extends": "standard",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [ "html", "vue", "standard" ],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-empty": 2,
        "no-eq-null": 2,
        "no-new": 0,
        "no-fallthrough": 0,
        "no-unreachable": 0,
        "arrow-parens": 0,
        "generator-star-spacing": 0,
        "no-mixed-spaces-and-tabs": 0, 
        "no-multi-spaces": 0,
        "no-console": 0,
        "no-tabs":0,
        "no-multiple-empty-lines": [1, {"max": 2}],
        "vue/no-parsing-error": [2, { "x-invalid-end-tag": false }]
    }
}
